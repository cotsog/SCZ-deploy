server {
	server_name {{wordpress_hostname}};

	listen 443 ssl http2;
	listen [::]:443 ssl http2;

	ssl on;
	ssl_certificate     /etc/letsencrypt/live/{{wordpress_hostname}}/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/{{wordpress_hostname}}/privkey.pem;


	location / {
		proxy_pass http://127.0.0.1:{{wordpress_port}}/;

		proxy_set_header X-Forwarded-Host         $host;
		proxy_set_header X-Forwarded-Server       $host;
		proxy_set_header X-Forwarded-For          $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto        $scheme;
		proxy_set_header X-Custom_Forwarded-Proto $scheme;
		proxy_set_header X-Real-IP                $remote_addr;
	}

}

